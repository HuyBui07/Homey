<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Nút Back -->

    <!-- Nút Favorite -->
    <!-- Nội dung mô tả -->




    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/image_slider"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

    </androidx.viewpager2.widget.ViewPager2>
    <ImageButton
        android:id="@+id/button_favorite"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:contentDescription="Favorite"
        android:src="@drawable/favorite_icon"
        android:background="@drawable/avatar_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/black" />

    <ImageButton
        android:id="@+id/button_back"
        android:layout_width="45dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:contentDescription="Back"
        app:srcCompat="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/black"
        tools:src="@drawable/baseline_arrow_back_24" />
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/image_slider"
        app:layout_constraintBottom_toTopOf="@+id/static_buttons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/propertyInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detail_title2">

                <TextView
                    android:id="@+id/detail_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="3.8 tỷ"
                    android:textColor="#50A1FE"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/detail_area"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="53 m²"
                    android:textColor="#50A1FE"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/detail_pricePerArea"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="71,7 triệu/m²"
                    android:textColor="#8B8989"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/detail_bedroom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableEnd="@drawable/bed_icon"
                    android:text="3"
                    android:textAlignment="center"
                    android:textColor="#8B8989"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/detail_bathroom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableEnd="@drawable/bathtub_icon"
                    android:text="2"
                    android:textAlignment="center"
                    android:textColor="#8B8989"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="Với 3 tỷ 8 sở hữu ngay căn hộ SAM Towers Đà Nẵng, cam kết lợi nhuận 200tr/năm, hỗ trợ... "
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageRow" />

            <TextView
                android:id="@+id/detail_map"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Xem trên bản đồ"
                android:textColor="#50A1FE"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/detail_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Mô tả"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:lineSpacingExtra="4dp"
                android:text="Với 3 tỷ 8, bạn đã có thể sở hữu ngay căn hộ cao cấp tại SAM Towers Đà Nẵng – nơi hội tụ đầy đủ tiện ích hiện đại và không gian sống đẳng cấp. Đặc biệt, chủ đầu tư cam kết lợi nhuận lên đến 200 triệu đồng/năm, mang đến cơ hội đầu tư sinh lời hấp dẫn. Hỗ trợ vay vốn linh hoạt, lãi suất ưu đãi cùng các chính sách thanh toán thuận lợi. Đừng bỏ lỡ cơ hội sở hữu một căn hộ tại thành phố biển Đà Nẵng với giá trị gia tăng không ngừng!"
                android:textColor="#333333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/detail_title3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="Đặc điểm bất động sản"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Mức giá"
                        android:textAlignment="textStart" />

                    <TextView
                        android:id="@+id/desc_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TextView" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Diện tích"
                        android:textAlignment="textStart" />

                    <TextView
                        android:id="@+id/desc_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TextView" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Mặt tiền"
                        android:textAlignment="textStart" />

                    <TextView
                        android:id="@+id/desc_frontage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TextView" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="54dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Hướng nhà" />

                    <TextView
                        android:id="@+id/desc_direction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TextView" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="57dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Pháp lý" />

                    <TextView
                        android:id="@+id/desc_legal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TextView" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="57dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Nội thất" />

                    <TextView
                        android:id="@+id/desc_furnitures"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TextView" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Nút cố định -->
    <LinearLayout
        android:id="@+id/static_buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/avatar2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/avatar_bg"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/detail_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trương Đăng Nghĩa"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="5dp"/>

        <Button
            android:id="@+id/zalo_button"
            android:layout_width="75dp"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:layout_weight="0"
            android:backgroundTint="#E7F3FF"
            android:text="Zalo"
            android:textColor="#000000"
            android:textSize="14dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/call_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:backgroundTint="#50A1FE"
            android:text="0866696***"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
