<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@android:color/white" />
            <stroke
                android:width="1dp"
                android:color="@color/border" />
            <corners android:radius="8dp" />
